<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/task_priority_label"
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:background="@color/tabsColor" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/task_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="this is the body of the task"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingTop="20dp" >
        
	        <TextView
	            android:id="@+id/task_duration"
	            android:layout_weight="1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="1.5 hour"
	            android:textSize="13sp" />
	        
	        <TextView
	            android:id="@+id/task_date"
	            android:layout_weight="1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Sun June 20 10:30 PM"
	            android:textSize="13sp" />
        
        </LinearLayout>
    </LinearLayout>

</LinearLayout>