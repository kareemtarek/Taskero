<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sak.todo.gui"
    android:versionCode="1"
    android:versionName="1.0" >

        <!-- Permissions -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.READ_SYNC_STATS" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-sdk
        android:targetSdkVersion="11" 
        android:minSdkVersion="11" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light" >
        <activity
            android:name=".Intro"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="FriendsList" >
        </activity>
        <activity
            android:name="AddConnection"
            android:label="Add firends"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity android:name="MeetingReview"></activity>
        <activity android:name="CreateTaskActivity"></activity>
        <activity android:name="CreateMeeting"></activity>
        <activity android:name="ShowTasksActivity"></activity>
        <activity android:name="SchedulesActivity"></activity>
            <!-- The authenticator service -->
        <service
            android:name="sak.todo.syncmgr.AccountAuthenticatorService"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>
        
        <!-- The SyncAdapter service -->
        <service
            android:name="sak.todo.syncadapter.SyncService"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/syncadapter" />
        </service>

        <!-- Authentication Activity -->
        <activity
            android:name="sak.todo.syncmgr.AuthenticatorActivity"
            android:configChanges="orientation"
            android:excludeFromRecents="true"
            android:label="@string/ui_activity_title"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        
        
        <!-- Date Provider -->
        <provider
            android:name="sak.todo.dataprovider.TodoContentProvider"
            android:authorities="sak.todo.dataprovider.TodoContentProvider" >
        </provider>
        
         <activity android:name="MeetingListActivity"></activity>
         <activity android:name="donationsActivity"></activity>
         <activity android:name="EagleVisionActivity"></activity>
         <activity android:name="CreateMultiTaskActivity"></activity>
         <activity android:name="CreateMultiTaskActivityUpdated"></activity>
         <activity android:name="MainActivity"></activity>
         <activity android:name="sak.todo.timeline.Calendar"></activity>
             
          <activity
            android:name="sak.todo.gui.ClickActivity"
            android:label="@string/app_name" >
        </activity>

        <service
            android:name="SchedulerEventService"
            android:process=":EventService" />
        <service
            android:name="sak.todo.gui.AlarmService"
            android:process=":AlarmService" />

        <receiver
            android:name="SchedulerSetupReceiver"
            android:process=":SetupReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.USER_PRESENT" />
                <action android:name="android.intent.action.ACTION_EXTERNAL_APPLICATIONS_AVAILABLE" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="sak.todo.gui.SchedulerEventReceiver"
            android:process=":EventReceiver" >
            <intent-filter>
                <data android:scheme="task:" />
            </intent-filter>
        </receiver>    
    </application>

</manifest>